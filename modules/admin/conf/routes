# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   @controllers.origo.admin.Application.dashboard()
GET     /:withType                          @controllers.origo.admin.Application.pageWithType(withType:String)
GET     /:withType/:identifier              @controllers.origo.admin.Application.pageWithTypeAndIdentifier(withType:String, identifier:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
